# Telegram Gift Detector - Environment Variables
# Скопируйте этот файл как .env и заполните своими данными

# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ TELEGRAM API (ОБЯЗАТЕЛЬНО)
# =============================================================================

# Получите на https://my.telegram.org/apps
API_ID=12345678
API_HASH=your_api_hash_here
PHONE_NUMBER=+1234567890

# =============================================================================
# НАСТРОЙКИ СЕССИИ
# =============================================================================

SESSION_NAME=gift_detector_pro

# =============================================================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=gift_detector.log

# =============================================================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# =============================================================================

RESPONSE_DELAY=0.5
MAX_RETRIES=3
CACHE_SIZE=1000

# =============================================================================
# НАСТРОЙКИ ДЕТЕКЦИИ
# =============================================================================

ENABLE_PYROGRAM_DETECTION=true
ENABLE_RAW_API_DETECTION=true
ENABLE_TEXT_DETECTION=true

# =============================================================================
# НАСТРОЙКИ ОТВЕТОВ
# =============================================================================

USE_HTML_FORMATTING=true
DISABLE_WEB_PAGE_PREVIEW=true
SHOW_STATS_IN_RESPONSE=true

# =============================================================================
# ФИЛЬТРЫ И ОГРАНИЧЕНИЯ
# =============================================================================

# ID пользователей для игнорирования (через запятую)
IGNORED_USERS=

# ID чатов для игнорирования (через запятую)  
IGNORED_CHATS=

# Минимальный интервал между ответами одному пользователю (секунды)
MIN_RESPONSE_INTERVAL=5

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# =============================================================================

SAVE_GIFT_LOGS=false
GIFT_LOGS_FILE=gifts_log.json
STATS_INTERVAL=300